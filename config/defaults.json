{
  "effort": "balanced",
  "autonomy": "standard",
  "auto_commit": true,
  "verification_tier": "standard",
  "context_compiler": true,
  "visual_format": "unicode",
  "max_tasks_per_plan": 5,
  "agent_teams": true,
  "team_mode": "auto",
  "branch_per_milestone": false,
  "plain_summary": true,
  "model_profile": "balanced",
  "model_overrides": {},
  "security_audit": false,
  "approval_gates": {
    "qa_fail": false,
    "security_warn": false,
    "code_review": false,
    "manual_qa": false
  },
  "departments": {
    "backend": true,
    "frontend": false,
    "uiux": false
  },
  "department_workflow": "backend_only",
  "cross_team_handoff": false,
  "qa_gates": {
    "post_task": true,
    "post_plan": true,
    "post_phase": true,
    "timeout_seconds": 300,
    "failure_threshold": "critical"
  },
  "escalation": {
    "timeout_seconds": 300,
    "auto_owner_on_timeout": true,
    "max_round_trips": 2
  },
  "po": {
    "enabled": true,
    "max_questionary_rounds": 3,
    "confidence_threshold": 0.85,
    "scope_output_format": "json",
    "skip_on_effort": ["turbo"]
  },
  "complexity_routing": {
    "enabled": true,
    "trivial_confidence_threshold": 0.85,
    "medium_confidence_threshold": 0.7,
    "fallback_path": "high",
    "force_analyze_model": "opus",
    "max_trivial_files": 3,
    "max_medium_tasks": 3
  }
}
