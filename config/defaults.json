{
  "_sections": "Phase 1: complexity_routing | Phase 2: critique, po, research_requests | Phase 3: review_loop, documenter | Phase 4: integration_gate, delivery | Phase 5: escalation, qa_gates, approval_gates",
  "effort": "balanced",
  "autonomy": "standard",
  "auto_commit": true,
  "verification_tier": "standard",
  "context_compiler": true,
  "visual_format": "unicode",
  "max_tasks_per_plan": 5,
  "agent_teams": true,
  "team_mode": "auto",
  "branch_per_milestone": false,
  "plain_summary": true,
  "model_profile": "balanced",
  "model_overrides": {},
  "security_audit": false,
  "approval_gates": {
    "qa_fail": false,
    "security_warn": false,
    "code_review": false,
    "manual_qa": false
  },
  "departments": {
    "backend": true,
    "frontend": false,
    "uiux": false
  },
  "department_workflow": "backend_only",
  "cross_team_handoff": false,
  "qa_gates": {
    "post_task": true,
    "post_plan": true,
    "post_phase": true,
    "timeout_seconds": 300,
    "failure_threshold": "critical"
  },
  "escalation": {
    "timeout_seconds": 300,
    "auto_owner_on_timeout": true,
    "max_round_trips": 2,
    "scope_boundary_required": true
  },
  "review_loop": {
    "max_cycles": 2
  },
  "research_requests": {
    "enabled": true,
    "blocking_timeout_seconds": 120,
    "max_concurrent_scouts": 4
  },
  "po": {
    "enabled": true,
    "max_questionary_rounds": 3,
    "confidence_threshold": 0.85,
    "scope_output_format": "json",
    "skip_on_effort": ["turbo"],
    "default_rejection": "patch"
  },
  "critique": {
    "enabled": true,
    "max_rounds": 3,
    "confidence_threshold": 85
  },
  "integration_gate": {
    "enabled": true,
    "timeout_seconds": 600,
    "checks": {
      "api_contracts": true,
      "design_sync": true,
      "handoffs": true,
      "tests": true
    },
    "retry_on_fail": true
  },
  "documenter": "on_request",
  "delivery": {
    "mode": "auto",
    "present_to_user": true
  },
  "complexity_routing": {
    "enabled": true,
    "trivial_confidence_threshold": 0.85,
    "medium_confidence_threshold": 0.7,
    "fallback_path": "high",
    "force_analyze_model": "opus",
    "max_trivial_files": 3,
    "max_medium_tasks": 3
  }
}
