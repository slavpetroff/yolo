{
  "description": "YOLO quality gates and continuous verification — all hooks route through native Rust dispatcher (`yolo hook <event>`)",
  "_note": "All hooks are handled by the native Rust dispatcher at $HOME/.cargo/bin/yolo. Each event routes to one `yolo hook <EventName>` command which internally dispatches to all relevant handlers (security-filter, validate-summary, skill-hook-dispatch, agent-start, agent-stop, agent-health, compaction-instructions, post-compact, map-staleness, prompt-preflight, session-stop, notification-log, blocker-notify, validate-frontmatter, bash-guard, file-guard, state-updater, qa-gate, task-verify). The bash hook-wrapper.sh is deprecated — it forwards to the Rust dispatcher for backward compatibility.",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Read|Glob|Grep|Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook PreToolUse",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook PostToolUse",
            "timeout": 15
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "matcher": "yolo-lead|yolo-dev|yolo-qa|yolo-scout|yolo-debugger|yolo-architect|yolo-docs|yolo:yolo-lead|yolo:yolo-dev|yolo:yolo-qa|yolo:yolo-scout|yolo:yolo-debugger|yolo:yolo-architect|yolo:yolo-docs|lead|dev|qa|scout|debugger|architect|docs|team-lead|team-dev|team-qa|team-scout|team-debugger|team-architect|team-docs",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook SubagentStart",
            "timeout": 3
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "yolo-lead|yolo-dev|yolo-qa|yolo-scout|yolo-debugger|yolo-architect|yolo-docs|yolo:yolo-lead|yolo:yolo-dev|yolo:yolo-qa|yolo:yolo-scout|yolo:yolo-debugger|yolo:yolo-architect|yolo:yolo-docs|lead|dev|qa|scout|debugger|architect|docs|team-lead|team-dev|team-qa|team-scout|team-debugger|team-architect|team-docs",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook SubagentStop",
            "timeout": 15
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "matcher": "yolo-lead|yolo-dev|yolo-qa|yolo-scout|yolo-debugger|yolo-architect|yolo-docs|yolo:yolo-lead|yolo:yolo-dev|yolo:yolo-qa|yolo:yolo-scout|yolo:yolo-debugger|yolo:yolo-architect|yolo:yolo-docs|lead|dev|qa|scout|debugger|architect|docs|team-lead|team-dev|team-qa|team-scout|team-debugger|team-architect|team-docs",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook TeammateIdle",
            "timeout": 30
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "yolo-lead|yolo-dev|yolo-qa|yolo-scout|yolo-debugger|yolo-architect|yolo-docs|yolo:yolo-lead|yolo:yolo-dev|yolo:yolo-qa|yolo:yolo-scout|yolo:yolo-debugger|yolo:yolo-architect|yolo:yolo-docs|lead|dev|qa|scout|debugger|architect|docs|team-lead|team-dev|team-qa|team-scout|team-debugger|team-architect|team-docs",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook TaskCompleted",
            "timeout": 15
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook SessionStart",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook PreCompact",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook Stop",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook UserPromptSubmit",
            "timeout": 3
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.cargo/bin/yolo hook Notification",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
